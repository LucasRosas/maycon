generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id            String    @id @default(uuid())
  title         String
  content       String
  publishedDate DateTime
  authorId      String
  author        String
  images        String[]
  metadata      Json
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?
}
